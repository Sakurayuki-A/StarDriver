<Application x:Class="StarDriver.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StarDriver.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 默认加载中文 -->
                <ResourceDictionary Source="Resources/Languages/zh-CN.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 全局字体样式 -->
            <!-- 使用嵌入字体：Fonts/static/文件名#字体名称 -->
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Fonts/static/#Lexend Deca"/>
            </Style>
            <Style TargetType="{x:Type UserControl}">
                <Setter Property="FontFamily" Value="Fonts/static/#Lexend Deca"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="Fonts/static/#Lexend Deca"/>
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="FontFamily" Value="Fonts/static/#Lexend Deca"/>
            </Style>
            <Style TargetType="{x:Type Button}">
                <Setter Property="FontFamily" Value="Fonts/static/#Lexend Deca"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
