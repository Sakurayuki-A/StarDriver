<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyName>StarDriver</AssemblyName>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\StarDriver.Core\StarDriver.Core.csproj" />
    <ProjectReference Include="..\StarDriver.Downloader\StarDriver.Downloader.csproj" />
  </ItemGroup>

  <!-- 嵌入字体文件 -->
  <ItemGroup>
    <Resource Include="Fonts\**\*.ttf" />
  </ItemGroup>

</Project>
